{
  "window.newWindowDimensions": "inherit",
  "window.nativeFullScreen": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "telemetry.telemetryLevel": "off",

  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.enablePreview": true,
  "workbench.tips.enabled": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.tree.indent": 10,
  "workbench.tree.enableStickyScroll": false,
  "workbench.panel.defaultLocation": "left",
  "workbench.iconTheme": "file-icons",
  "workbench.activityBar.location": "hidden",

  "breadcrumbs.enabled": false,
  "problems.decorations.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "vscsm.showBranchName": true,
  "git.decorations.enabled": true,
  "scm.diffDecorations": "gutter",
 
  "editor.emptySelectionClipboard": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.lineNumbers": "on",
  "editor.guides.indentation": true,
  "editor.inlineSuggest.enabled": true,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.renderLineHighlight": "none",
  "editor.formatOnSave": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.scrollBeyondLastLine": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
  },
  "editor.minimap.enabled": false,
  "editor.hover.delay": 500,
  "editor.hover.enabled": true,
  "editor.matchBrackets": "always",
  "editor.colorDecorators": true,
  "editor.lightbulb.enabled": "off",
  "editor.selectionHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  // Include "-" in word selection.
  // "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.linkedEditing": true,
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "blink",
  "editor.stickyScroll.enabled": false,

  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "json": false,
    "yaml": true,
    "javascript": true
  },
  "chat.editor.wordWrap": "off",

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.tabs.enabled": false,
  
  "files.associations": {
    "*.tailwind.css": "tailwindcss",
    "*.c": "c",
    "*.h": "c",
    "*.ejs": "html"
  },
  "files.trimTrailingWhitespace": false,
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": false,
  "files.exclude": {
    // files included here do not appear in the file explorer
    // "**/.git": true,
    // "**/.svn": true,
    // "**/node_modules": true,
    // "**/vendor": true,
    // "**/.conan": true,
  },

  "search.useIgnoreFiles": false,
  "search.exclude": {
      "**/vendor": true,
      "**/public": true,
      "**/node_modules": true,
      "**/dist": true,
      "**/coverage": true,
      "**/package-lock.json": true,
      "**/lib": true,
      "**/.conan": true,
  },

  "editor.fontFamily": "Menlo, Monaco, monospace",
  "editor.fontSize": 12,
  "editor.fontWeight": 400,
  "editor.lineHeight": 18,
  "editor.padding.top": 16,
  "editor.padding.bottom": 100,
  // "editor.suggestFontSize": 16,
  // "editor.suggestLineHeight": 30,
  "editor.inlayHints.enabled": "off",
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": 400,
  "terminal.integrated.fontFamily": "Menlo, Monaco, monospace",
  "chat.editor.fontFamily": "Menlo, Monaco, monospace",

  // javascript/web
  "eslint.format.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.options": {},
  "eslint.codeActionsOnSave.rules": null,
  "eslint.validate": [
    "javascript",
    "json",
    "jsonc",
    "json5",
    "vue",
    "html"
  ],
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
  },
  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
  },
  "[html]": {
    "editor.defaultFormatter": "mohd-akram.vscode-html-format",
    "editor.formatOnSave": true,
  },
  "[ejs]": {
    "editor.defaultFormatter": "mohd-akram.vscode-html-format",
    "editor.formatOnSave": true,
  },
  // c/c++
  "[c]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true,
  },
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true,
  },
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.clang_format_path": "clang-format",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.intelliSenseUpdateDelay": 500,
  "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
  "C_Cpp.codeAnalysis.runAutomatically": false,
  "C_Cpp.codeAnalysis.clangTidy.enabled": false,
  "C_Cpp.codeAnalysis.clangTidy.path": "clang-tidy",
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  "C_Cpp.codeAnalysis.clangTidy.args": [
    "--extra-arg=-std=c++17",
    "-std=c++17"
  ],
  "C_Cpp.codeAnalysis.exclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/public/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/package-lock.json": true,
    "**/lib/**": true,
    "**/.conan/**": true
  },
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "${workspaceFolder}/src/**",
    "${workspaceFolder}/include/**",
    "${workspaceFolder}/vendor/**",
    "${workspaceFolder}/public/**",
    "${workspaceFolder}/dist/**",
    "${workspaceFolder}/coverage/**",
    "${workspaceFolder}/package-lock.json",
    "${workspaceFolder}/lib/**",
    "${workspaceFolder}/.conan/**"
  ],
  "clangd.path": "/opt/homebrew/opt/llvm/bin/clangd",
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--enable-config",
    "--header-insertion=never",
    "--all-scopes-completion",
    "--pch-storage=memory",
    "-j=8"
  ],
  "clangd.onConfigChanged": "restart",
  "clangd.fallbackFlags": [],
  "makefile.configureOnOpen": true,
  "cmake.revealLog": "never",
  "cmake.useCMakePresets": "always",
  "cmake.loggingLevel": "debug",
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.showConfigureWithDebuggerNotification": false,

  // GLSL
  "glsllint.glslangValidatorPath": "/opt/homebrew/bin/glslangValidator",
  "glsllint.glslangValidatorArgs": [
    "--stdin",
  ],
  "glsllint.fallBackStage": "vert",
  "glsllint.useIncludeDirOfFile": false,

  // vscode custom css
  "css.customData": [".vscode/tailwind_directives.json"],
  "scss.customData": [
    ".vscode/tailwind_directives.json"
  ],
  "vscode_custom_css.imports": [
    "file:///Users/ialonso/Projects/neverbot/dotfiles/vscode/custom-vscode.css",
    "file:///Users/ialonso/Projects/neverbot/dotfiles/vscode/vscode-script.js"
  ],
  // deactivate default css/scss embeded formatter
  "css.validate": false,
  "less.validate": false,
  "scss.validate": true,
  "css.format.enable":false,
  "less.format.enable":false,
  "scss.format.enable": true,
  "scss.format.newlineBetweenRules": true,
  "scss.format.newlineBetweenSelectors": true,

  "liveServer.settings.donotShowInfoMsg": true,
}